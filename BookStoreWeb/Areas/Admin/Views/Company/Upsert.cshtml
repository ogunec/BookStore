@model Company

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<input asp-for="Id" hidden />
	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="col-12 pb-2">
					<h2 class="text-primary">@(Model.Id != 0? "Update" : "Create") Company </h2>
					<hr />
				</div>
				@*<div asp-validation-summary="All"></div>*@
				<div class="mb-3">
					<label asp-for="Name" class="form-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="PhoneNumber" class="form-label"></label>
					<input asp-for="PhoneNumber" class="form-control" />
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="StreetAddress" class="form-label"></label>
					<input asp-for="StreetAddress" class="form-control" />
					<span asp-validation-for="StreetAddress" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="City" class="form-label"></label>
					<input asp-for="City" class="form-control" />
					<span asp-validation-for="City" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="State" class="form-label"></label>
					<input asp-for="State" class="form-control" />
					<span asp-validation-for="State" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="PostalCode" class="form-label"></label>
					<input asp-for="PostalCode" class="form-control" />
					<span asp-validation-for="PostalCode" class="text-danger"></span>
				</div>
				<div class="col-12">
					@if (Model.Id != 0)
					{
						<button type="submit" asp-action="Upsert" asp-controller="Company" asp-route-id="@Model.Id" 
						class="btn btn-primary" style="width:150px">Update</button>
					}
					else
					{
						<button type="submit" asp-action="Upsert" asp-controller="Company" 
						class="btn btn-primary" style="width:150px">Create</button>
					}
					&nbsp;
					<a asp-action="Index" asp-controller="Company" class="btn btn-secondary" style="width:150px">Back</a>
				</div>
			</div>
		</div>
	</div>

</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}